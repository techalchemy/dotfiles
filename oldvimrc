call pathogen#infect()      " add pathogen to vimrc/get all bundles
call pathogen#helptags()    " Load helptags
set nocompatible            " Disable legacy vi compatibility
syntax enable
set encoding=utf-8          " UTF8
set showcmd                 " Show incomplete commands
filetype plugin indent on   " Load filetype plugins and indentation

set nowrap                  " Disable line wrapping
set tabstop=4 shiftwidth=4  " Tab is 4 spaces
set expandtab               " Use spaces instead of tabs
set backspace=indent,eol,start " Backspace through all chars in insert mode
set list

au BufWrite *.py %retab     " Re-tab python files on write
au BufRead,BufNewFile *.py set expandtab

:iabbrev pdb    # XXX BREAKPOINT XXX <cr>import ipdb; ipdb.set_trace()
:iabbrev ppython #!/usr/bin/env python <cr>#-*- coding: utf-8 -*-

set hlsearch                " highlight matches
set incsearch               " incremental searching
set ignorecase              " search is case insensitive
set smartcase               " unless you include caps

"" Mappings
nmap <F8> :TagbarToggle<CR>        " Toggle the tagbar
noremap <F3> :NumbersToggle<CR>     " Toggle line numbers
noremap <F5> :GundoToggle<CR>      " Map f5 to gundo
" noremap <F9> :Gcommit<CR>         " Gcommit mapped

" let mapleader = ","               " set cmd leader to ,

" colorscheme tomorrow_night

" Disable pylint on save
" let g:pymode_lint_wrote = 0

" Enable python folding
" let g:pymode_folding = 1

" Always show status line
set laststatus=2

" Enable fancy mode
let g:Powerline_symbols = 'fancy'

set relativenumber                  " Config line numbers
set colorcolumn=81                  " Block out col 81
set cursorline                      " Shows horiz. cursor line

set background=dark
set t_Co=256
""let g:jellybeans_use_lowcolor_black=1
let g:molokai_original=0
let g:solarized_termcolors=256
colorscheme molokai

" Remember previous position and jump to it
au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif

set showmatch       " Show matching brackets.
"set autowrite		" Automatically save before commands like :next and :make
"set hidden             " Hide buffers when they are abandoned
set history=150         "Save history of commends
set ruler           " Always show cursor position

